{
  "enabledPlugins": {
    "document-skills@anthropic-agent-skills": true
  },
  "alwaysThinkingEnabled": true,
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "test -f ~/.claude/hooks/pull-dotfiles.sh && bash ~/.claude/hooks/pull-dotfiles.sh || true"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Read|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "test -f ~/.claude/hooks/block-secrets.py && python3 ~/.claude/hooks/block-secrets.py || true"
          }
        ]
      }
    ]
  }
}
